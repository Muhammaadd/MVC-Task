@model List<Trainee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MagicLayout.cshtml";
    int x = 1;
}
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Level</th>
      <th scope="col">Department</th>
      <th scope="col">Profile</th>
      <th scope="col">Details</th>
    </tr>
  </thead>
  <tbody>
      @foreach (Trainee trainee in Model)
      {
        <tr>
        <th scope="row">@x</th>
        <td>@trainee.Name</td>
        <td>@trainee.Address</td>
        <td>@trainee.Level</td>
        <td>@ViewBag.departments[x-1]</td>
        <td><img src = "images/@trainee.Profile" style = "width:150px"/></td>
        <td><a asp-action="Details" asp-controller="Trainee" asp-route-Id="@trainee.Id">Details</a></td>
        </tr>      
      }
    
  </tbody>
</table>
